<%= simple_form_for @link, :html => { :class => 'form-horizontal' } do |f| %>


	<%= f.input :name %>
  <%= f.input :organization %>
  
  <%= f.input :goal %>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                links_path, :class => 'btn' %>
  </div>
<% end %>
